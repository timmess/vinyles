{% extends 'base.html.twig' %}

{% block title %}Tous nos Artistes{% endblock %}

{% block body %}
    <h1>Nos Artistes</h1>
    {% if admin %}
        <a class="btn btn-info mb-3" href="{{ path('add_artist') }}">Ajouter un artiste</a>
    {% endif %}
    <div class="row">
        {% for artist in artists %}
            <div class="col-6 border">
                <h2><a href="{{ path('artist', {id: artist.id}) }}">{{ artist.name }}</a></h2>
                <hr/>
                <div class="text-center">
                    <img src="{{ artist.photo }}" alt="{{ artist.name }}" class="w-75 border mh-20">
                </div>
                <p>Genre{% if artist.genres | length > 1 %}s{% endif%} : {% for genre in artist.genres %}<a href="{{ path('genre', {id:genre.id}) }}">{{ genre.name }}</a>{% endfor %}</p>
                <p class="h2 text-decoration-underline">Albums :</p>
                <ul class="list-group">
                    {% for album in artist.albums %}
                        <li class="list-group-item"><h3><a href="{{ path('album', {id: album.id}) }}">{{ album.name | capitalize}}</a></h3></li>
                    {% endfor %}
                </ul>
                <p class="h2 text-decoration-underline mb-2">Vinyles :</p>
                <ul class="list-group">
                    {% for vinyl in artist.vinyls %}
                        <li class="list-group-item">
                            <h3><a href="{{ path('vinyl', {id:vinyl.id}) }}">{{ vinyl.title  | capitalize }} ({{ vinyl.releaseDate | date("d/m/Y") }})</a></h3>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
        <div class="pagination">
            {{ knp_pagination_render(artists) }}
        </div>
    </div>
{% endblock %}