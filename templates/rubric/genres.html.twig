{% extends 'base.html.twig' %}

{% block title %}Les genres{% endblock %}

{% block body %}
    <h1>Tous les genres</h1>
    {% if admin %}
        <a class="btn btn-info mb-3" href="{{ path('add_genre') }}">Ajouter un genre</a>
    {% endif %}
    <div class="row">
        {% for genre in genres %}
            <div class="col-6 border">
                <h2><a class="h1 text-dark text-decoration-none" href="{{ path('genre', {id: genre.id}) }}">{{ genre.name | capitalize }}</a></h2>
                <hr/>
                {% for artist in genre.artists %}
                    <h3 class="h4"><a href="{{ path('artist', {id: artist.id}) }}" class="text-decoration-none">{{ artist.name }}</a></h3>
                {% endfor %}
            </div>
        {% endfor %}
        <div class="pagination">
            {{ knp_pagination_render(genres) }}
        </div>
    </div>
{% endblock %}