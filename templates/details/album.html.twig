{% extends 'base.html.twig' %}

{% block title %}{{ album.artist.name }} - {{ album.name }}{% endblock %}

{% block body %}
    <h1>{{ album.name }}</h1>

    <h2><a href="{{ path('artist', {id: album.artist.id}) }}">{{ album.artist.name }}</a></h2>

    <h2 class="h5">Genre : {% for genre in album.genres %}<a href="{{ path('genre',{id:genre.id}) }}">{{ genre.name }}</a> {% if loop.last != true %} / {% endif %}{% endfor %}</h2>

    <img src="{{ album.photo }}" alt="" class="mh-23">

    {% if admin == true %}
        <div>
            <a href="{{ path('updateAlbum',{id:album.id}) }}" class="btn btn-primary my-2">
                Mettre Ã  jour {{ album.name }}
            </a>
        </div>
    {% endif %}

    <ul class="list-group col-6 mb-3">
        <h2>Tracklist :</h2>
        {% if admin == true %}
            <div><a href="{{ path('addTrackByAlbum', {id:album.id}) }}" class="btn btn-primary my-2">Ajouter une chanson</a></div>
        {% endif %}
        {% for track in album.tracks %}
            <li class="list-group-item d-flex justify-content-between"><span>{{ track.title }} ({{ track.duration }} sec)</span>  <span>position : {{ track.position }}</span></li>
        {% endfor %}
    </ul>


    <h2>Vinyles issus de cet album :</h2>
    {% if admin == true %}
        <div><a href="{{ path('addVinylByAlbum', {id:album.id}) }}" class="btn btn-primary my-2">Ajouter un vinyl</a></div>
    {% endif %}
    <ul class="list-group col-6 mb-2">
        {% for vinyl in album.vinyl %}
            <li class="list-group-item d-flex justify-content-between"><a class="text-dark primary-hover text-decoration-none" href="{{ path('vinyl', {id: vinyl.id}) }}">{{ vinyl.title }} ({{ vinyl.releasedate | date("d/m/Y") }})</a></li>
        {% endfor %}
    </ul>
{% endblock %}
