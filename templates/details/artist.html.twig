{% extends 'base.html.twig' %}

{% block title %}{{ artist.name }}{% endblock %}

{% block body %}
    <h1>{{ artist.name | capitalize}}</h1>
    {% if admin == true %}
        <div class="my-2"><a href="{{ path('updateArtist', {id:artist.id}) }}" class="btn btn-info">Mettre Ã  jour {{ artist.name }}</a></div>
    {% endif %}
    <img src="{{ artist.photo }}" alt="" class="w-100">
    
    <h2>Genres</h2>
    <ul class="list-group">
        {% for genre in artist.genres %}
            <li class="list-group-item"><a href="{{ path('genre', {id:genre.id}) }}">{{ genre.name }}</a></li>
        {% endfor %}
    </ul>

    <h2>Albums :</h2>
    {% if admin == true %}
        <div><a href="{{ path('addAlbumByArtist', {id:artist.id}) }}" class="btn btn-info my-2">Ajouter un album</a></div>
    {% endif %}
    <ul class="list-group">
        {% for album in artist.albums %}
            <li class="list-group-item"><a href="{{ path('album', {id: album.id}) }}">{{ album.name }} </a></li>
        {% endfor %}
    </ul>
{% endblock %}
