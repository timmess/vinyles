{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <h2>{{ user.firstname }} {{ user.lastname }}</h2>

    <p>{{ user.email }}</p>

    <img src="{{ user.photo }}" alt="">

    <div>
        <a href="{{ path('updateUser', {id:user.id}) }}" class="btn btn-primary my-2">
            Mettre Ã  jour mon profil
        </a>
    </div>

    <div>
        <h2>Mes vinyls :</h2>

        <ul class="list-group">
            {% for vinyl in user_vinyls %}
                <li class="list-group-item">
                    <a href="{{ path('artist', {id:vinyl.artist.id}) }}">{{ vinyl.artist.name }}</a> - <a href="{{ path('vinyl', {id:vinyl.id}) }}">{{ vinyl.title }}</a> ({{ vinyl.releaseDate | date("d/m/Y") }})
                </li>
            {% endfor %}
        </ul>

        <div class="pagination my-2">
            {{ knp_pagination_render(user_vinyls) }}
        </div>
    </div>
{% endblock %}
