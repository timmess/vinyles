{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Inscrivez-vous !</h1>

    <div class="my-2">
        {{ form_errors(registrationForm) }}
    </div>

    {{ form_start(registrationForm) }}
    <h2 class="h4">Renseignez vos informations</h2>
        <div class="input-group">
            <div class="my-1">
                {{form_row(registrationForm.firstname, {'label':false, 'attr':{'class' : 'form-control'}})}}
            </div>
        </div>
        <div class="input-group">
            <div class="my-1">
                {{form_row(registrationForm.lastname, {'label':false, 'attr':{'class' : 'form-control'}})}}
            </div>
        </div>

        <div class="input-group">
            <div class="my-1">
                {{form_row(registrationForm.email, {'label':false, 'attr':{'class' : 'form-control'}})}}
            </div>
        </div>

        <div class="input-group">
            <div class="my-1">
                {{form_row(registrationForm.photo, {'label':false, 'attr':{'class' : 'form-control'}})}}
            </div>
        </div>

        <div class="input-group">
            <div class="my-1">
                {{form_row(registrationForm.plainPassword.first, {'label':false, 'attr':{'class' : 'form-control'}})}}
            </div>
        </div>

        <div class="input-group">
            <div class="my-1">
                {{form_row(registrationForm.plainPassword.second, {'label':false, 'attr':{'class' : 'form-control'}})}}
            </div>
        </div>

        <div class="input-group">
            <div class="my-1">
                {{form_row(registrationForm.agreeTerms)}}
            </div>
        </div>

        <button type="submit" class="btn btn-success">Enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
