{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <h2 class="h4">Ajouter un vinyle {{ album.name }} de {{ album.artist.name }}</h2>
    <img src="{{ album.photo }}" alt="{{ album.artist.name }}" class="mh-23 my-3">

    {{ form_start(form) }}

        <div class="input-group d-none">
            {{form_row(form.title, {'attr':{'class' : 'form-control my-2'}})}}
        </div>
        <div class="input-group">
            {{form_row(form.release_date, {'attr':{'class' : 'form-control my-2'}})}}
        </div>
        <div class="input-group">
            {{form_row(form.pressing_number, {'attr':{'class' : 'form-control my-2'}})}}
        </div>
        <div class="input-group">
            {{form_row(form.photo, {'attr':{'class' : 'form-control my-2'}})}}
        </div>
        <div class="input-group d-none">
            {{form_row(form.artist, {'attr':{'class' : 'form-control my-2'}})}}
        </div>
        <div class="input-group d-none">
            {{form_row(form.album, {'attr':{'class' : 'form-control my-2'}})}}
        </div>
        <div class="input-group">
            {{form_row(form.genres, {'attr':{'class' : 'form-check-input mt-0'}})}}
        </div>
        <div class="input-group">
            {{form_row(form.price, {'attr':{'class' : 'my-2'}})}}
        </div>

    <button type="submit" class="btn btn-success my-2">Enregistrer</button>


    {{ form_end(form) }}
{% endblock %}
