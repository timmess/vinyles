{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <div class="alert alert-light">
        <h2 class="h4">Ajouter un vinyl</h2>
        <div class="row">
            <div class="col">
                {{form_row(form.title)}}
            </div>
            <div class="col">
                {{form_row(form.release_date)}}
            </div>
            <div class="col">
                {{form_row(form.photo)}}
            </div>
            <div class="col">
                {{form_row(form.artist)}}
            </div>
            <div class="col">
                {{form_row(form.album)}}
            </div>
            <div class="col">
                {{form_row(form.genres)}}
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Enregistrer</button>


    {{ form_end(form) }}
{% endblock %}
