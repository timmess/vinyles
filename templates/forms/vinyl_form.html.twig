{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    {{ form_start(form) }}

        <div class="alert alert-light">
            <h2 class="h4">Ajouter un vinyle </h2>
            <div class="row">
                <div class="my-2">
                    {{form_row(form.title)}}
                </div>
                <div class="my-2">
                    {{form_row(form.release_date)}}
                </div>
                <div class="my-2">
                    {{form_row(form.photo)}}
                </div>
                <div class="my-2">
                    {{form_row(form.artist)}}
                </div>
                <div class="my-2">
                    {{form_row(form.album)}}
                </div>
                <div class="my-2">
                    {{form_row(form.genres)}}
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Enregistrer</button>

    {{ form_end(form) }}
{% endblock %}
